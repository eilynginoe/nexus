---
import Heroextrabuttom from "./heroextrabuttom.astro";

const { title, text, backgroundImage, buttonText, buttonLink } = Astro.props;
---

<section
    class="hero-section"
    style={`background-image: url('${backgroundImage}');`}
>
    <div class="hero-content">
        <div class="hero-left">
            <h1 class="hero-title">{title}</h1>
        </div>
        <div class="hero-right">
            <p class="hero-text">{text}</p>
        </div>
    </div>
    <Heroextrabuttom buttonText={buttonText} buttonLink={buttonLink}/>
</section>

<style>
    .hero-section {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 4rem 10px;
        background-image: url("/img/nuestroservicios.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: black;
        z-index: 1;
        box-sizing: border-box;
    }

    .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(228, 228, 228, 0.78);
        z-index: -1;
    }

    .hero-content {
        display: flex;
        flex-direction: column;
        text-align: center;
        width: 100%;
        max-width: 1400px;
    }

    .hero-left {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

    .hero-title {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1.2;
        margin: 0;
        margin-bottom: -4rem;
        font-family: "Fjalla One", sans-serif;
        font-style: normal;
        font-weight: 400;
        color: black;
    }

    .hero-right {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-top: 6rem;
    }

    .hero-text {
        font-weight: 500;
        font-size: 1.5rem;
        line-height: 1.6;
    }

        @media (min-width: 900px) {
        .hero-content {
            width: 75vw;
            flex-direction: row;
            justify-content: space-between;
            gap: 0.5rem;
            
        }

        .hero-left,
        .hero-right {
            padding-right: 2rem;
        }

        .hero-left{
            justify-content: flex-start;
        }

        .hero-right{
            justify-content: center;
        }

        .hero-title {
            font-size: 3.5rem;
        }

        .hero-text {
            font-size: 1.5rem;
        }

        .hero-logo {
            margin-top: 2rem;
        }

        .hero-logo img {
        width: 550px; /* Ajusta el tama√±o del logo */
    }
    }
</style>
